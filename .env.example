# Attio Integration API - Environment Variables
# Make a copy of this file named '.env' and fill in the values

# =================================================================
# API Configuration
# =================================================================
# Generate a secure random token for API access
API_ACCESS_TOKEN=your_secure_api_access_token

# =================================================================
# Attio API Credentials
# =================================================================
# Get these from Attio dashboard > Settings > Developer > API Keys
ATTIO_API_KEY=your_attio_api_key

# =================================================================
# Zoho Subscriptions Credentials
# =================================================================
# Get these from Zoho API Console (instructions below)
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_ORGANIZATION_ID=your_zoho_organization_id

# Optional but recommended for webhook security
ZOHO_WEBHOOK_SECRET=your_zoho_webhook_secret

# =================================================================
# Braintree Credentials (Sandbox for development)
# =================================================================
# Get these from Braintree Control Panel (instructions below)
BT_ENVIRONMENT=sandbox
BT_MERCHANT_ID=your_braintree_merchant_id
BT_PUBLIC_KEY=your_braintree_public_key
BT_PRIVATE_KEY=your_braintree_private_key

# Optional but recommended for webhook security
BT_WEBHOOK_SECRET=your_braintree_webhook_secret

# =================================================================
# Server Configuration
# =================================================================
PORT=3000
NODE_ENV=development 